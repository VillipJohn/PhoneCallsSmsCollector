<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    android:orientation="horizontal"
    android:padding="2dp">

    <TextView
        android:id="@+id/tv_title_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="77777777777777777777777777777777777777777777777777777777777777777777777777777777777777777777777777777777777777777777"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_del"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:foreground="@android:drawable/ic_delete"
        android:foregroundGravity="center"
        android:gravity="center_vertical" />
</LinearLayout>