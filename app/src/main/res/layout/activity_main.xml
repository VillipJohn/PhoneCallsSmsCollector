<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_800"
    tools:context=".ui.MainActivity">


    <EditText
        android:id="@+id/etPhoneName"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:ems="10"
        android:hint="PhoneName"
        android:inputType="textPersonName"
        android:textColorHint="@color/grey_50"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/etAdminPassword"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/etPhoneName"
        android:layout_alignStart="@+id/etPhoneName"
        android:layout_below="@+id/etPhoneName"
        android:hint="Start Password"
        android:textColorHint="@color/grey_50"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAdminPassword"
        android:layout_centerHorizontal="true"
        android:text="OK" />

</RelativeLayout>