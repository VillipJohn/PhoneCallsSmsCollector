<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_800"
    tools:context=".ui.MainActivity">


    <EditText
        android:id="@+id/etAdminPassword"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="64dp"
        android:hint="Admin Password"
        android:textColorHint="@color/grey_50"
        android:textSize="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnOkAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAdminPassword"
        android:layout_centerHorizontal="true"
        android:text="OK" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etAdminPassword"
        android:layout_alignStart="@+id/etAdminPassword"
        android:layout_centerVertical="true"
        android:checked="false"
        android:text="Включение звуковых уведомлений"
        android:textColor="@color/grey_50" />

</RelativeLayout>
